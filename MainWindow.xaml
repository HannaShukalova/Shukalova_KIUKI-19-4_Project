        </TreeView>
        <Button FontSize="40" Content="Start" HorizontalAlignment="Left" Margin="42,99,0,255" Name="createButton" Width="316" Click="СreateUserButton_Click" FontFamily="Ink Free" FontWeight="Bold" FontStyle="Normal" Visibility="Visible" Background="{x:Null}" Cursor="Wait" Grid.ColumnSpan="2" >
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF046C14"/>
                    <GradientStop Color="#FF777C05" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECF09E"/>
                    <GradientStop Color="#FF306438" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
